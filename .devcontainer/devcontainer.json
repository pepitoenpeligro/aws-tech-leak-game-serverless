{
	"name": "aws-tech-leak-game-serverless-devcontainer",
    "image": "mcr.microsoft.com/devcontainers/base:bookworm",
	"mounts": [
		"source=${localWorkspaceFolder},target=/devcontainermounted,type=bind,consistency=cached"
	],
    "customizations": {
		"vscode": {
			"settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "icon": "terminal-bash"
                    }
                }
            }
		}
	},
    "features": {
		"ghcr.io/devcontainers/features/docker-in-docker:2": {
			"version": "latest",
			"enableNonRootDocker": "true",
			"moby": "true"
		},
		"ghcr.io/devcontainers/features/node:1": {
			"version": "22.14.0"
		},
		"ghcr.io/devcontainers/features/github-cli:1.0.13": {
			"version": "2.67.0"
		},
		"ghcr.io/devcontainers/features/aws-cli:1.1.0": {
			"version": "2.24.14"
		},
		"ghcr.io/devcontainers-extra/features/aws-cdk:2": {
			"version": "2.1001.0"
		},
		"ghcr.io/devcontainers/features/git:1": {
            "version": "2.48.1"
        },
	},
	"postCreateCommand": {
        "Configure Build Tools": "npm install --global corepack@0.31.0 && corepack use pnpm@10.5.2 && pnpm install typescript@5.8.2"
	}
    // "remoteUser": "node"

}